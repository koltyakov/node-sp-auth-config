{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2017"],
    "rootDir": "src",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "newLine": "LF",
    "skipLibCheck": true,
    "types": ["node"],
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}